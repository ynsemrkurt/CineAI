<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CineAI" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Colors -->
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="backgroundColor">@color/black</item>
        <item name="color">@color/white</item>

        <!-- Typography -->
        <item name="textAppearanceTitleLarge">@style/TitleLargeTextStyle</item>
        <item name="textAppearanceBody1">@style/Body1TextStyle</item>
        <item name="fontFamily">@font/alata</item>

        <!-- View Style -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
        <item name="android:editTextStyle">@style/CustomEditTextStyle</item>

        <!-- Splash -->
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">?backgroundColor</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">2000</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>